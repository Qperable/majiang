{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "strict": true,
	  "lib": ["ES6", "DOM"],             // 或 ["ES2017", "DOM"]，视你的需求而定
    "strictNullChecks": false,
    "noEmitHelpers": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./assets",
    "./src",
	  "./src/utils/DataManager.ts",
	  "./src/**/*.ts",
	  "./src/**/*.d.ts",
    "./engine"
  ]
}
